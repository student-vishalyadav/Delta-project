<% layout('layouts/boilerplate') %>

<div class="row justify-content-center mt-4">
  <div class="col-md-6">

    <!-- Listing Title -->
    <h2 class="fw-semibold mb-3 text-center"><%= listing.title %></h2>

    <!-- Image + Details Card -->
    <div class="bg-white p-3 rounded shadow-sm">

      <!-- ⭐ Fallback + Responsive Image -->
      <img 
        src="<%= listing.image?.url || 'https://placehold.co/800x500?text=No+Image' %>" 
        class="w-100 rounded mb-3 show-img"
        alt="<%= listing.title %>"
      >

      <!-- Basic Info -->
      <p class="text-muted mb-1"><i>Posted by: <%= listing.owner?.username %></i></p>
      <p class="text-muted mb-1"><%= listing.description %></p>
      <p class="fw-bold mb-1">₹<%= listing.price.toLocaleString("en-IN") %> / night</p>
      <p class="text-muted mb-1"><%= listing.location %>, <%= listing.country %></p>

      <!-- ⭐ Owner Buttons -->
      <% if (
            currUser &&
            listing.owner &&
            currUser._id.toString() === listing.owner._id.toString()
          ) { %>

        <div class="d-flex gap-2 mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>

    </div>

    <hr class="my-4">

    <!-- ⭐ Review Form -->
    <div class="mt-3">
      <h4>Leave a Review</h4>

      <% if (currUser) { %>
        <form action="/listings/<%= listing._id %>/reviews" method="POST">

          <!-- ⭐ FIXED RATING FIELDSET -->
          <fieldset class="starability-slot mt-3">
            <legend>Your Rating:</legend>

            <input type="radio" id="rate1" name="review[rating]" value="1" required />
            <label for="rate1">1 star</label>

            <input type="radio" id="rate2" name="review[rating]" value="2" />
            <label for="rate2">2 stars</label>

            <input type="radio" id="rate3" name="review[rating]" value="3" />
            <label for="rate3">3 stars</label>

            <input type="radio" id="rate4" name="review[rating]" value="4" />
            <label for="rate4">4 stars</label>

            <input type="radio" id="rate5" name="review[rating]" value="5" />
            <label for="rate5">5 stars</label>
          </fieldset>

          <!-- ⭐ Comment -->
          <div class="mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea 
              name="review[comment]" 
              id="comment" 
              rows="4" 
              class="form-control" 
              required
            ></textarea>
          </div>

          <button class="btn btn-outline-dark mt-3">Submit</button>
        </form>

      <% } else { %>
        <p class="text-muted">Please login to leave a review.</p>
      <% } %>

    </div>

    <hr class="my-4">

    <!-- ⭐ Reviews Section -->
    <h4>All Reviews</h4>

    <div class="row mt-3">

      <% if (listing.reviews.length === 0) { %>
        <p class="text-muted ms-3">No reviews yet.</p>
      <% } %>

      <% for (let review of listing.reviews) { %>

        <div class="card col-12 mb-3 p-0 shadow-sm">
          <div class="card-body">

            <h5 class="card-title mb-1">
              <%= review.author ? review.author.username : "Anonymous" %>
            </h5>

            <p class="card-text mb-2"><%= review.comment %></p>

            <p class="starability-result" data-rating="<%= review.rating %>">
              ⭐ <%= review.rating %> / 5
            </p>

          </div>

          <div class="card-footer bg-light">

            <!-- Only review author can delete -->
            <% if (currUser && review.author && currUser._id.toString() === review.author._id.toString()) { %>
              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            <% } %>

          </div>
        </div>

      <% } %>

    </div>

  </div>
</div> 